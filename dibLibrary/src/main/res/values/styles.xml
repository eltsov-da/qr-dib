<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItem</item>
        <item name="spinnerDropDownItemStyle">@style/DropDownItem</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>

<!--     This is not referenced. Is it needed?
    <style name="DropDownListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@color/accent</item>
        <item name="android:background">@color/primaryDark</item>
    </style> -->

    <!-- This style applies to the navigation spinner and the list that drops from it. -->
    <style name="DropDownItem" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
        <!-- The following line would give the drop-down navigation a primary color background.
        However it would not change the background on pressing a list item.
        <item name="android:background">@color/primary</item> -->
    </style>

    <style name="text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:layout_marginLeft">@dimen/halfGrid</item>
        <item name="android:layout_marginRight">@dimen/halfGrid</item>
    </style>

    <style name="secondaryText" parent="text">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="firstLineText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="secondLineText">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="infoBar">
        <item name="android:paddingBottom">@dimen/halfGrid</item>
        <item name="android:paddingTop">@dimen/halfGrid</item>
    </style>

</resources>